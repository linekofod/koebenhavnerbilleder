---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  variant = "primary",
  size = "medium",
} = Astro.props;

const linkStyling = "text-black w-fit pb-1";

const variantClasses = {
  primary: "hover:border-b hover:border-black",
  secondary: "border-b border-black hover:border-none",
};

const sizeClasses = {
  small: "text-sm",
  medium: "text-base",
  large: "text-lg",
};
---

<a
  href={href}
  target={target}
  class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></a
>
