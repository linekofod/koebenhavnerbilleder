---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "text-black border border-black transition ease-in w-fit";

const variantClasses = {
  primary: "hover:bg-[#2e3338] hover:text-white",
  secondary: "bg-[#2e3338] text-white hover:bg-white hover:text-black",
};

const sizeClasses = {
  small: "p-4 py-2 text-sm",
  medium: "p-6 py-3 text-base",
  large: "p-8 py-3 text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></button
>
